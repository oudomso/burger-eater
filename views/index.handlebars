
<body style="background-image: url('../assets/img/background.jpg')">
<div class="container">

    <h1 style="text-align: center; color: rgb(15, 74, 78)">Burger-Eater-Add-Your-Favorite-Burger</h1>

<img class="center img" src="https://www.seriouseats.com/recipes/images/2015/07/20150728-homemade-whopper-food-lab-35-1500x1125.jpg">



<div class="row">
<div class= "col-4">
  <div class="box">
  <h2 style="color: rgb(51, 51, 217)">Untouched</h2>
    <ul>
      {{#each burgers}}
          {{#unless eaten}}
          {{!-- Use Partial if False --}}
        {{> state-check devour=false}}
            {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>
<div class= "col-4"></div>
<div class= "col-4">
  <div class = "box">

    <h2 style="color: rgb(35, 240, 83)">Devoured</h2>
    <ul>
      {{#each burgers}}
          {{#if eaten}}
        {{> state-check devour=true}}
            {{/if}}
      {{/each}}
    </ul>
    </div>
  </div>

</div>

<form class="create-form center">

  <div class="form-group">
    <label for="burger">Enter Burger:</label>
    <input type="text" id="burger" placeholder="Burger Name" name="name">
    <button class = "btn btn-success" type="submit" >Add Burger</button>
  </div>

</form>
</div>

</body>